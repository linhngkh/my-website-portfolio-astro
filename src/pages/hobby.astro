---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <section class="py-12 border-2 border-black">
    <div class="px-10">
      <h1 class="text-4xl lg:text-5xl xl:text-7xl font-bold mb-4">Hobby</h1>
    </div>

    <div class="flex px-10 py-10 justify-between">
      <div class="flex justify-center items-center gap-3">
        <img src="/icons8-earbud-headphones-96.png" alt="" />
        <p class="text-lg font-semibold">Listen to Music</p>
      </div>
      <div class="flex justify-center items-center gap-3">
        <img src="/icons8-finland-96.png" alt="" />
        <p class="text-lg font-semibold">
          Improve Finnish listening skills on Yle Podcasts
        </p>
      </div>
    </div>

    <div class="flex px-10 py-10 justify-between">
      <div class="flex justify-center items-center gap-3">
        <img src="/icons8-free-code-camp-96.png" alt="" />
        <p class="text-lg font-semibold">
          Learn from Amazing Tutorial Videos on FreeCodeCamp
        </p>
      </div>
      <div class="flex justify-center items-center gap-3">
        <img src="/icons8-skateboard-96.png" alt="" />
        <p class="text-lg font-semibold">Skateboard after a long day coding</p>
      </div>
    </div>
    <div class="flex px-10 py-10 justify-between">
      <div class="flex justify-center items-center gap-3">
        <img src="/icons8-medium-96.png" alt="" />
        <p class="text-lg font-semibold">Read tech or tutorial news</p>
      </div>
    </div>
  </section>
</BaseLayout>
