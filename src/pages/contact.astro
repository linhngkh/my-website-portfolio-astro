---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <section class="py-12 border-2 border-black">
    <div class="container mx-auto px-4 grid gap-8 lg:grid-cols-2">
      <div>
        <h1 class="text-4xl lg:text-5xl xl:text-7xl font-bold mb-4">Contact</h1>
        <p class="mb-6 text-lg">
          HIRE ME! If you're looking for a potential creative web developer,
          have a burning question to ask me, or simply want to interact, the
          quickest way is to hit me up on email.
        </p>
        <a href="mailto:linh.nguyenkhanhib@gmail.com">
          <p class="mb-6 text-lg">
            Want my email: linh.nguyenkhanhib@gmail.com
          </p></a
        >
        <p class="font-bold text-lg mb-2">Find me on:</p>
        <div class="text-lg font-bold">
          <div class="flex gap-6">
            <a href="https://github.com/linhngkh"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="40"
                height="40"
                viewBox="0 0 16 16"
                ><path
                  fill="currentColor"
                  d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59c.4.07.55-.17.55-.38c0-.19-.01-.82-.01-1.49c-2.01.37-2.53-.49-2.69-.94c-.09-.23-.48-.94-.82-1.13c-.28-.15-.68-.52-.01-.53c.63-.01 1.08.58 1.23.82c.72 1.21 1.87.87 2.33.66c.07-.52.28-.87.51-1.07c-1.78-.2-3.64-.89-3.64-3.95c0-.87.31-1.59.82-2.15c-.08-.2-.36-1.02.08-2.12c0 0 .67-.21 2.2.82c.64-.18 1.32-.27 2-.27c.68 0 1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82c.44 1.1.16 1.92.08 2.12c.51.56.82 1.27.82 2.15c0 3.07-1.87 3.75-3.65 3.95c.29.25.54.73.54 1.48c0 1.07-.01 1.93-.01 2.2c0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
                ></path></svg
              ></a
            >
            <a href="https://www.linkedin.com/in/linhh-nguyen22/"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="40"
                height="40"
                viewBox="0 0 128 128"
                ><path
                  fill="currentColor"
                  d="M116 3H12a8.91 8.91 0 0 0-9 8.8v104.42a8.91 8.91 0 0 0 9 8.78h104a8.93 8.93 0 0 0 9-8.81V11.77A8.93 8.93 0 0 0 116 3zM39.17 107H21.06V48.73h18.11zm-9-66.21a10.5 10.5 0 1 1 10.49-10.5a10.5 10.5 0 0 1-10.54 10.48zM107 107H88.89V78.65c0-6.75-.12-15.44-9.41-15.44s-10.87 7.36-10.87 15V107H50.53V48.73h17.36v8h.24c2.42-4.58 8.32-9.41 17.13-9.41C103.6 47.28 107 59.35 107 75z"
                ></path></svg
              ></a
            >
          </div>
        </div>
      </div>
      <!-- form -->
      <div>
        <form
          class="flex flex-col w-full mb-4"
          action="https://formspree.io/f/mdorkdvr"
          method="POST"
        >
          <label
            class="form-label inline-block mb-2 text-gray-700"
            for="username"
          >
            Username:
            <input
              type="text"
              name="username"
              required
              class="block w-full px-3 py-2 border-black border-2 rounded"
            />
          </label>
          <label for="email" class="form-label inline-block mb-2 text-gray-700">
            Email:
            <input
              type="email"
              name="email"
              required
              class="block w-full px-3 py-2 border-black border-2 rounded"
            />
          </label>
          <label
            for="message"
            class="form-label inline-block mb-2 text-gray-700"
          >
            Message
            <textarea
              name="message"
              cols="30"
              rows="10"
              required
              class="block w-full px-3 py-2 border-black border-2 rounded"
            ></textarea>
          </label>

          <button
            type="submit"
            class="w-1/4 px-6 py-4 rounded-md bg-teal-600 hover:bg-teal-700 text-white"
            >Send it!</button
          >
        </form>
      </div>
    </div>
  </section>
</BaseLayout>
